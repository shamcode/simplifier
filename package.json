{
  "name": "simplifier",
  "version": "0.1.4",
  "repository": "https://github.com/shamcode/",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "build": "webpack --mode=production --progress",
    "prepublish": "yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-modules-umd": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0",
    "css-loader": "~2.1.1",
    "eslint": "^5.4.0",
    "eslint-plugin-html": "^5.0.5",
    "eslint-plugin-jest": "^22.17.0",
    "express": "^4.17.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "~3.0.1",
    "jest": "^23.6.0",
    "jest-runner-eslint": "^0.7.4",
    "jest-runner-stylelint": "^1.0.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "sass-loader": "~7.1.0",
    "sham-ui-directives": "^3.0.1",
    "sham-ui-jest-preprocessor": "^3.0.4",
    "sham-ui-templates": "^3.2.5",
    "sham-ui-templates-loader": "^3.0.4",
    "sham-ui-test-helpers": "^3.1.4",
    "style-loader": "~0.22.1",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.8.0",
    "webpack": "~4.11.1",
    "webpack-cli": "^3.3.4",
    "webpack-dev-middleware": "~3.1.3",
    "webpack-hot-middleware": "^2.22.3"
  },
  "dependencies": {
    "logic-expression-simplify": "0.0.2",
    "sham-ui": "^3.3.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/plugin-transform-modules-umd",
      "@babel/plugin-proposal-function-bind",
      [
        "@babel/plugin-proposal-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss"
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "moduleFileExtensions": [
          "js",
          "json",
          "sfc"
        ],
        "transform": {
          "^.+\\.sht$": "sham-ui-jest-preprocessor",
          "^.+\\.sfc$": "sham-ui-jest-preprocessor",
          "^.+\\.js$": "babel-jest"
        },
        "collectCoverageFrom": [
          "src/**/*.js"
        ],
        "coveragePathIgnorePatterns": [
          "^.+\\.sht$"
        ],
        "testPathIgnorePatterns": [
          "<rootDir>/node_modules/",
          "<rootDir>/__tests__/setup-jest.js"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup-jest.js",
        "testURL": "http://simplifier.example.com"
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "eslint",
        "moduleFileExtensions": [
          "js",
          "json",
          "sfc"
        ],
        "testMatch": [
          "<rootDir>/src/**/*.*",
          "<rootDir>/__tests__/**/*.js",
          "<rootDir>/__mocks__/**/*.js"
        ]
      },
      {
        "runner": "jest-runner-stylelint",
        "displayName": "stylelint",
        "moduleFileExtensions": [
          "scss"
        ],
        "testMatch": [
          "**/*.scss"
        ]
      }
    ]
  }
}
