{
  "name": "simplifier",
  "version": "0.1.3",
  "repository": "https://github.com/shamcode/",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "build": "webpack --mode=production --progress"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "css-loader": "~1.0.0",
    "eslint": "^5.4.0",
    "eslint-plugin-jest": "^21.21.0",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "jest": "^23.6.0",
    "jest-runner-eslint": "^0.6.0",
    "node-sass": "^4.9.3",
    "sass-loader": "~7.1.0",
    "sham-ui-directives": "^2.0.3",
    "sham-ui-jest-preprocessor": "^2.0.10",
    "sham-ui-templates": "^2.1.1",
    "sham-ui-templates-loader": "^2.0.8",
    "sham-ui-test-helpers": "^3.1.4",
    "style-loader": "~0.22.1",
    "webpack": "~4.11.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "~3.1.3",
    "webpack-hot-middleware": "^2.22.3"
  },
  "dependencies": {
    "logic-expression-simplify": "0.0.2",
    "sham-ui": "^2.0.5"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties",
      "transform-es2015-modules-umd",
      "transform-function-bind",
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "moduleFileExtensions": [ "js", "json", "sfw" ],
        "transform": {
          "^.+\\.sht$": "sham-ui-jest-preprocessor",
          "^.+\\.sfw$": "sham-ui-jest-preprocessor",
          "^.+\\.js$": "babel-jest"
        },
        "collectCoverageFrom": [
          "src/**/*.js"
        ],
        "coveragePathIgnorePatterns": [ "^.+\\.sht$" ],
        "testPathIgnorePatterns": [
          "<rootDir>/node_modules/",
          "<rootDir>/__tests__/setup-jest.js"
        ],
        "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup-jest.js",
        "testURL": "http://simplifier.example.com"
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "<rootDir>/src/**/*.js",
          "<rootDir>/__tests__/**/*.js",
          "<rootDir>/__mocks__/**/*.js"
        ]
      }
    ]
  }
}
